<resources xmlns:tools="http://schemas.android.com/tools">
     <!-- Base application theme. -->
    <style name="Base.Theme.FoodCode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/loading_gif</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/naranja</item>
        <!-- Colores para los botones -->
        <item name="colorPrimary">@color/my_primary</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- colores para el fondo de app -->
        <item name="colorPrimaryVariant">@color/my_primary_variant</item>
    </style>

    <style name="Theme.FoodCode" parent="Base.Theme.FoodCode" />

    <color name="my_primary">#FF9800</color>

    <color name="my_primary_variant">#FF9800</color>
    <color name="naranja">#FF9800</color>

    <style name="Theme.BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/naranja</item>
        <item name="colorPrimaryVariant">@color/naranja</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja</item>
        <item name="colorSecondaryVariant">@color/naranja</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>

